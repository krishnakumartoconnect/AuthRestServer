@{
    ViewData["Title"] = "Secret Wallet";
}

<h2>Secret Wallet</h2>

<form method="post" asp-action="Store">
    <input name="name" placeholder="Secret Name" />
    <input name="value" placeholder="Secret Value" />
    <button type="submit">Store Secret</button>
</form>

<form method="get" asp-action="Get">
    <input name="name" placeholder="Secret Name" />
    <button type="submit">Get Secret</button>
</form>

@if (ViewBag.Message != null)
{
    <p><strong>@ViewBag.Message</strong></p>
}

@if (ViewBag.Secret != null)
{
    <p><strong>Value: @ViewBag.Secret</strong></p>
}
